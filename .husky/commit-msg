#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validar formato del mensaje de commit
# Formato esperado: tipo(scope): descripción
# Ejemplos: feat(header): add new icon component
#          fix(icons): resolve type error
#          docs(readme): update installation guide

commit_regex='^(feat|fix|docs|style|refactor|test|chore)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "❌ Invalid commit message format."
    echo "Expected format: tipo(scope): descripción"
    echo "Examples:"
    echo "  feat(header): add new icon component"
    echo "  fix(icons): resolve type error"
    echo "  docs(readme): update installation guide"
    exit 1
fi
